<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            name="MyGreatUI"
            application="org.eclipse.e4.ui.workbench.swt.E4Application">
         <property
               name="lifeCycleURI"
               value="bundleclass://MyGreatUI/mygreatui.E4LifeCycle">
         </property>
         <property
               name="applicationCSS"
               value="platform:/plugin/MyGreatUI/css/default.css">
         </property>
         <property
               name="appName"
               value="MyGreatUI">
         </property>
      </product>
   </extension>

</plugin>
